<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="50dp" />
                    <solid
                        android:color="#EBEBF3" />
                </shape>
            </item>
            <item
                android:top="2dp"
                 android:bottom="2dp"
                android:left="2dp"
                android:right="2dp">
                <shape>
                    <corners
                        android:radius="49dp" />
                    <solid
                        android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>